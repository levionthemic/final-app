<%= render "devise/shared/error_messages", resource: resource %>

<div class="signup">
  <div class="signup-wrap">
    <h2 class="signup-wrap__title mb-3">Fotobook Signup</h2>
    <div class="signup-wrap__options">
      <%= link_to user_google_oauth2_omniauth_authorize_path + "?action_type=signup", method: :post do %>
        <%= image_tag "google-icon.png", alt: "Google" %>
      <% end %>
    </div>
    <div class="signup-wrap__form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false
      }}) do |f| %>
        <div class="form-group mb-3 field">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true  %>
        </div>
        <div class="form-group mb-3 field">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
        </div>
        <div class="form-group mb-3 field">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group mb-3 field">
          <%= f.label :password, "New Password" %>
          <%= f.password_field :password, class: "form-control", placeholder: "New Password" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
        </div>
        <div class="signup-wrap__form--submit actions">
          <%= f.submit "Sign up", class: "btn" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
