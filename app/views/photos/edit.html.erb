<div class="bg-white p-4 m-4" style="min-height: 90vh;">
   <div class="d-flex align-items-center justify-content-between">
    <h5 class="font-weight-bold lh-1 m-0">Edit photo</h5>
    <%= link_to "Back", request.referer, class: "btn btn-primary" %>
  </div>
  <%= form_with url: "/photos/#{@photo.id}/", method: :patch, local: true, html: { enctype: "multipart/form-data" } do |f| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :title, "Title", class: "form-label" %>
        <%= f.text_field :title, value: @photo.title, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, value: @photo.description, class: "form-control", rows: 3 %>
      </div>
    </div>
    <div class="mb-3 col-md-4">
      <%= f.label :sharing_mode, "Sharing mode", class: "form-label" %>
      <%= f.select :sharing_mode, Photo.sharing_modes.keys.map { |mode| [mode.titleize, mode] }, {}, class: "form-select" %>
    </div>
    <div class="mb-4">
      <%= f.label :image, "Upload Photo", class: "form-label d-block" %>
      <label class="border border-secondary border-dashed d-flex align-items-center justify-content-center position-relative rounded overflow-hidden" style="width: 150px; height: 150px;">
        <% if @photo.image %>
          <%= image_tag "#{@photo.image}", alt: "", class: "w-100 h-100 object-fit-cover"%>
          <i class="fa-solid fa-xmark close-icon"></i>
        <% else %>
          <span class="fs-1 text-muted">+</span>
          <%= f.file_field :image, class: "d-none" %>
        <% end %>
      </label>
    </div>
    <%= f.submit "Save", class: "btn btn-success" %>
  <% end %>
</div>
