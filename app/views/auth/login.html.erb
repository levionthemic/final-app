<div class="login">
  <div class="login-wrap">
    <h2 class="login-wrap__title mb-3">Fotobook Login</h2>
    <div class="login-wrap__options">
      <%= image_tag "google-icon.png", alt: "Google" %>
      <%= image_tag "fb-icon.png", alt: "Facebook" %>
      <%= image_tag "tw-icon.png", alt: "Twitter" %>
    </div>
    <div class="login-wrap__form">
      <div class="login-wrap__form--img">
        <%= image_tag "unknown-avatar.png", alt: "Avatar" %>
      </div>
      <%= form_with url: login_path, method: :post, local: true do |form| %>
        <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
        <div class="login-wrap__form--submit">
          <%= form.submit "Login", class: "btn login-wrap__form--submit-button" %>
        </div>
      <% end %>
      <a href="">Forgot password?</a>
    </div>
    <%= link_to "Create an account", "/signup", class: "login-wrap__register"%>
  </div>
</main>