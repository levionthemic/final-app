<div class="signup">
  <div class="signup-wrap">
    <h2 class="signup-wrap__title mb-3">Fotobook Signup</h2>
    <div class="signup-wrap__options">
      <%= image_tag "google-icon.png", alt: "Google" %>
      <%= image_tag "fb-icon.png", alt: "Facebook" %>
      <%= image_tag "tw-icon.png", alt: "Twitter" %>
    </div>
    <div class="signup-wrap__form">
      <%= form_with url: signup_path, method: :post, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password, "New Password" %>
          <%= form.password_field :password, class: "form-control", placeholder: "New Password" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password_confirm, "Password Confirmation" %>
          <%= form.password_field :password_confirm, class: "form-control", placeholder: "Password Confirmation" %>
        </div>
        <div class="signup-wrap__form--submit">
          <button type="submit" class="btn">Signup</button>
        </div>
      <% end %>
    </div>
  </div>
</div>