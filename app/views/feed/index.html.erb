<div class="guest-feeds">
  <div class="guest-feeds-wrap">
    <div
      class="btn-group"
      role="group"
      aria-label="Basic radio toggle button group"
    >
      <input type="radio" class="btn-check" name="typepage" id="photo" autocomplete="off" checked />
      <label class="btn btn-outline-primary" for="photo">PHOTO</label>
      <input type="radio" class="btn-check" name="typepage" id="album" autocomplete="off" />
      <label class="btn btn-outline-primary" for="album">ALBUM</label>
    </div>
    <div class="guest-feeds-list">
      <% @photos.each do |photo| %>
        <div class="guest-feeds-list__item">
          <div class="guest-feeds-list__item--image">
            <%= image_tag "#{photo.image}", alt: "" %>
          </div>
          <div class="guest-feeds-list__item--content">
            <div class="">
              <div class="d-flex gap-2 align-items-center">
                <div class="guest-feeds-list__item--avatar">
                  <%= image_tag "#{photo.user.avatar}", alt: "Avatar", class: "" %>
                </div>
                <span><%= "#{photo.user.first_name} #{photo.user.last_name}" %></span>
              </div>
              <p class="my-2"><b><%= photo.title %></b></p>
              <p class="guest-feeds-list__item--desc">
                <%= photo.description %>
              </p>
            </div>
            <div class="guest-feeds-list__item--time">
              <div class="">
                <i class="fa-solid fa-heart"></i>
                <span>123</span>
              </div>
              <p>4:56 pm 01/04/2018</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>